@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <h1 id="hello_world" class="display-4 green-text" onmouseover="newColor()" onmouseout="oldColor()">Web VS</h1>
    <p></p>


    <iframe width="560" height="315" src="https://www.youtube.com/embed/j7oQEPfe-O8" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>

   
    

        <button onclick="typeWriter()">Click here</button>

        <p id="song"></p>

        <script>
            var i = 0;
            var txt = 'A song I have been listening to lately, enjoy!';
            var speed = 50;

            function typeWriter() {
                if (i < txt.length) {
                    document.getElementById("song").innerHTML += txt.charAt(i);
                    i++;
                    setTimeout(typeWriter, speed);
                }
            }
        </script>



</div>